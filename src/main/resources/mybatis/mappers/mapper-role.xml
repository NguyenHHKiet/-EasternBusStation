	<insert id="create" parameterType="com.coeding.springmvc.entity.Role">
	<![CDATA[
		insert into role (role)
		values (#{role})
	]]>
	<selectKey resultType="int" keyProperty="id" order="AFTER">
	<![CDATA[
	    SELECT LAST_INSERT_ID()
	    ]]>
	  </selectKey>
	</insert>
	
	<update id="update" parameterType="com.coeding.springmvc.entity.Role">
	<![CDATA[
		update role set role = #{role}
		where id = #{id}
	]]>	
	</update>
	
	<delete id="delete" parameterType="com.coeding.springmvc.entity.Role">
	<![CDATA[
		DELETE  FROM role
  		WHERE id=#{id}
	]]>	
	</delete>
	
</mapper>
