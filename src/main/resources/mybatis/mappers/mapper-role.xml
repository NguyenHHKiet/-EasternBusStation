<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.role">

	<select id="findAll" resultType="com.coeding.springmvc.entity.Role">
	<![CDATA[
		SELECT * FROM role ORDER BY id desc 
		
	]]>
	</select>
	
	<select id="findById" parameterType="int" resultType="com.coeding.springmvc.entity.Role">
	<![CDATA[
		select * from role where id = #{id}
	]]>
	</select>
	
	<select id="findByRole" parameterType="string" resultType="com.coeding.springmvc.entity.Role">
	<![CDATA[
		select * from role where role = #{name}
	]]>
	</select>
	
	<select id="findByRoleUser" parameterType="string" resultType="com.coeding.springmvc.entity.User">
	<![CDATA[
		SELECT user.* FROM busstation.user inner join busstation.role inner join busstation.users_role
		on user.id = users_role.custId and role.id = users_role.roleId
		and role = #{name}
	]]>
	</select>
