<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.user">

	<select id="findAll" resultType="com.coeding.springmvc.entity.User">
	<![CDATA[
		SELECT * FROM user ORDER BY id desc 
		
	]]>
	</select>
	
	<select id="findById" parameterType="int" resultType="com.coeding.springmvc.entity.User">
	<![CDATA[
		select * from user where id = #{id}
	]]>
	</select>
	
	<select id="findByName" parameterType="string" resultType="com.coeding.springmvc.entity.User">
	<![CDATA[
		select * from user where name = #{name}
	]]>
	</select>
	
	<select id="findByEmail" parameterType="string" resultType="com.coeding.springmvc.entity.User">
	<![CDATA[
		select * from user where email = #{email}
	]]>
	</select>
